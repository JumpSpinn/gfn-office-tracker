<UserControl
	x:DataType="vm:MainPageViewModel"
	x:Class="OfficeTracker.Views.Pages.MainPageBar"
	xmlns:vm="using:OfficeTracker.ViewModels.Pages"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="60"
	>
	<DockPanel
		MinHeight="32"
		MaxHeight="32"
		Background="#151515"
	>
		<Border
			DockPanel.Dock="Top"
		>
			<Menu
				FontSize="12"
				VerticalAlignment="Center"
				Margin="4 0"
			>
				<MenuItem
					Header="Einstellungen"
					Padding="8 0"
					Margin="0 8"
					Click="RequestOpenSettingsPage"
				/>
				<MenuItem
					Header="?"
					Padding="8 0"
					Margin="4 8"
					ToolTip.Tip="Datenbank Speicherort öffnen"
					ToolTip.Placement="Bottom"
					ToolTip.VerticalOffset="0"
					Click="RequestOpenDatabaseSaveDirectoryFolder"
				/>
			</Menu>
		</Border>
	</DockPanel>
</UserControl>
