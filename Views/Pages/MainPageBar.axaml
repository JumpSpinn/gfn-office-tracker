<UserControl
	x:DataType="vm:MainPageViewModel"
	x:Class="OfficeTracker.Views.Pages.MainPageBar"
	xmlns:vm="using:OfficeTracker.ViewModels.Pages"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
	mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="60"
	>
	<Border
		MinHeight="32"
		MaxHeight="32"
		Background="#151515"
	>
		<Menu
			FontSize="12"
			VerticalAlignment="Center"
			Margin="4 0"
		>
			<MenuItem Padding="8 0" Margin="0 8" Click="RequestOpenSettingsPage">
				<MenuItem.Header>
					<materialIcons:MaterialIcon Kind="Cog" />
				</MenuItem.Header>
			</MenuItem>
			<MenuItem Padding="8 0" Margin="0 8" Click="RequestOpenDatabaseSaveDirectoryFolder">
				<MenuItem.Header>
					<materialIcons:MaterialIcon Kind="QuestionMark" />
				</MenuItem.Header>
			</MenuItem>
		</Menu>
	</Border>
</UserControl>
