<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="650"
             xmlns:wizard="clr-namespace:OfficeTracker.ViewModels.Pages.Wizard"
             x:DataType="wizard:WizardDaysPageViewModel"
             x:Class="OfficeTracker.Views.Pages.Wizard.WizardDaysPage">
	<Panel>
		<Panel.Background>
			<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
				<GradientStop Color="#003764" Offset="0.0"/>
				<GradientStop Color="#00111f" Offset="1.0"/>
			</LinearGradientBrush>
		</Panel.Background>
		<Border Padding="50">
			<Grid RowDefinitions="*,Auto">
				<StackPanel Grid.Row="0" Orientation="Vertical" Spacing="40">
					<Image
						Width="150"
						Source="avares://OfficeTracker/Assets/Images/logo_white.png"
						Opacity="1"
					/>
					<StackPanel Orientation="Vertical">
						<Label
							Content="Setup-Assistent"
							HorizontalAlignment="Center"
							FontFamily="{DynamicResource UrbanistFont}"
							FontSize="14"
							Margin="0 -6"
							FontWeight="Medium"
						/>
						<Label
							Content="Schritt 3"
							HorizontalAlignment="Center"
							FontFamily="{DynamicResource UrbanistFont}"
							FontSize="18"
							FontWeight="Medium"
						/>
					</StackPanel>
					<StackPanel Orientation="Vertical" Spacing="10">
						<TextBlock
							HorizontalAlignment="Left"
							TextWrapping="Wrap"
							FontFamily="{DynamicResource UrbanistFont}"
							Text="Kreuze bitte alle Wochentage an, an denen du standardmäßig im HomeOffice bist:"
						/>
						<StackPanel Orientation="Vertical">
							<CheckBox
								Content="Montag"
								FontFamily="{DynamicResource UrbanistFont}"
								IsChecked="{Binding MondaySelected}"
							/>
							<CheckBox
								Content="Dienstag"
								FontFamily="{DynamicResource UrbanistFont}"
								IsChecked="{Binding TuesdaySelected}"
							/>
							<CheckBox
								Content="Mittwoch"
								FontFamily="{DynamicResource UrbanistFont}"
								IsChecked="{Binding WednesdaySelected}"
							/>
							<CheckBox
								Content="Donnerstag"
								FontFamily="{DynamicResource UrbanistFont}"
								IsChecked="{Binding ThursdaySelected}"
							/>
							<CheckBox
								Content="Freitag"
								FontFamily="{DynamicResource UrbanistFont}"
								IsChecked="{Binding FridaySelected}"
							/>
							<CheckBox
								Content="Samstag"
								FontFamily="{DynamicResource UrbanistFont}"
								IsChecked="{Binding SaturdaySelected}"
							/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
				<Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto">
					<Button Grid.Column="0" Content="Zurück" Command="{Binding PreviousSetupPageCommand}" />
					<Button Grid.Column="2" Content="Weiter" Command="{Binding NextSetupPageCommand}" />
				</Grid>
			</Grid>
		</Border>
	</Panel>
</UserControl>

