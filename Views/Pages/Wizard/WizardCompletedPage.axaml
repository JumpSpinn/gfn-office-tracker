<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:OfficeTracker.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="650"
             xmlns:wizard="clr-namespace:OfficeTracker.ViewModels.Pages.Wizard"
             x:DataType="wizard:WizardCompletedPageViewModel"
             x:Class="OfficeTracker.Views.Pages.Wizard.WizardCompletedPage">
	<Panel Effect="{Binding BlurEffect}">
		<Panel.Background>
			<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
				<GradientStop Color="#003764" Offset="0.0"/>
				<GradientStop Color="#00111f" Offset="1.0"/>
			</LinearGradientBrush>
		</Panel.Background>
		<Border Padding="50">
			<Grid RowDefinitions="*,Auto">
				<StackPanel Grid.Row="0" Orientation="Vertical" Spacing="40">
					<Image
						Width="150"
						Source="avares://OfficeTracker/Assets/Images/logo_white.png"
						Opacity="1"
					/>
					<StackPanel Orientation="Vertical">
						<Label
							Content="Setup-Assistent"
							HorizontalAlignment="Center"
							FontFamily="{DynamicResource UrbanistFont}"
							FontSize="14"
							Margin="0 -6"
							FontWeight="Medium"
						/>
						<Label
							Content="Zusammenfassung"
							HorizontalAlignment="Center"
							FontFamily="{DynamicResource UrbanistFont}"
							FontSize="18"
							FontWeight="Medium"
						/>
					</StackPanel>

					<Border Padding="10" CornerRadius="4" BorderThickness="1">
						<Border.Background>
							<LinearGradientBrush StartPoint="100%,0%" EndPoint="100%,100%" Opacity=".5">
								<GradientStop Color="#30FFFFFF" Offset="0.0"/>
								<GradientStop Color="#20FFFFFF" Offset="1.0"/>
							</LinearGradientBrush>
						</Border.Background>
						<Border.BorderBrush>
							<LinearGradientBrush StartPoint="100%,0%" EndPoint="100%,100%" Opacity=".5">
								<GradientStop Color="#40FFFFFF" Offset="0.0"/>
								<GradientStop Color="#60FFFFFF" Offset="1.0"/>
							</LinearGradientBrush>
						</Border.BorderBrush>
						<StackPanel Orientation="Vertical" Spacing="20">
							<StackPanel Orientation="Vertical" Spacing="10">
								<!-- NAME -->
								<Grid ColumnDefinitions="*,*">
									<Label
										Grid.Column="0"
										Content="Angegebener Name:"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Left"
									/>
									<Label
										Grid.Column="1"
										Content="{Binding WizardNamePageViewModel.Name}"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Right"
									/>
								</Grid>
								<!-- HOME OFFICE % -->
								<Grid ColumnDefinitions="*,*">
									<Label
										Grid.Column="0"
										Content="Ziel-Quote - HomeOffice:"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Left"
									/>
									<Label
										Grid.Column="1"
										Content="{Binding WizardBalancePageViewModel.HomeOfficePercentage}"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Right"
									/>
								</Grid>
								<!-- STANDORT % -->
								<Grid ColumnDefinitions="*,*">
									<Label
										Grid.Column="0"
										Content="Ziel-Quote - Standort:"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Left"
									/>
									<Label
										Grid.Column="1"
										Content="{Binding WizardBalancePageViewModel.OfficePercentage}"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Right"
									/>
								</Grid>
								<!-- Tage - HomeOffice -->
								<Grid ColumnDefinitions="*,*">
									<Label
										Grid.Column="0"
										Content="Tage - HomeOffice:"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Left"
									/>
									<Label
										Grid.Column="1"
										Content="{Binding HomeOfficeDays}"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Right"
									/>
								</Grid>
								<!-- Tage - Standort -->
								<Grid ColumnDefinitions="*,*">
									<Label
										Grid.Column="0"
										Content="Tage - Standort:"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Left"
									/>
									<Label
										Grid.Column="1"
										Content="{Binding OfficeDays}"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Right"
									/>
								</Grid>
								<!-- Heutiger Tag einberechnet -->
								<Grid ColumnDefinitions="*,*">
									<Label
										Grid.Column="0"
										Content="Heutiger Tag einberechnet:"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Left"
									/>
									<Label
										Grid.Column="1"
										Content="{Binding CurrentDayTracked}"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Right"
									/>
								</Grid>
								<!-- HomeOffice Arbeitstage -->
								<Grid ColumnDefinitions="*,*">
									<Label
										Grid.Column="0"
										Content="Arbeitstage - HomeOffice:"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Left"
									/>
									<Label
										Grid.Column="1"
										Content="{Binding WizardDaysPageViewModel.SelectedDays}"
										FontFamily="{DynamicResource UrbanistFont}"
										FontSize="12"
										HorizontalAlignment="Right"
									/>
								</Grid>
							</StackPanel>
							<!-- Statistik -->
							<StackPanel Orientation="Vertical" Spacing="5">
								<Label
									Content="Berechnete Statistik:"
									FontFamily="{DynamicResource UrbanistFont}"
									FontSize="12"
									HorizontalAlignment="Left"
								/>
								<controls:StatisticControl
									HomeOfficeDays="{Binding HomeOfficeDays}"
									OfficeDays="{Binding OfficeDays}"
									AddButtonEnabled="False"
									AddButtonVisible="False"
								/>
							</StackPanel>
						</StackPanel>
					</Border>
				</StackPanel>
				<Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto">
					<Button Grid.Column="0" Content="Zurück" Command="{Binding PreviousSetupPageCommand}" />
					<Button Grid.Column="2" Content="Setup fertigstellen" Command="{Binding NextSetupPageCommand}" />
				</Grid>
			</Grid>
		</Border>
	</Panel>
</UserControl>

