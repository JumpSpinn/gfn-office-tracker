<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="650"
             xmlns:wizard="clr-namespace:OfficeTracker.ViewModels.Pages.Wizard"
             x:DataType="wizard:WizardDataPageViewModel"
             x:Class="OfficeTracker.Views.Pages.Wizard.WizardDataPage">
	<Panel>
		<Panel.Background>
			<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
				<GradientStop Color="#003764" Offset="0.0"/>
				<GradientStop Color="#00111f" Offset="1.0"/>
			</LinearGradientBrush>
		</Panel.Background>
		<Border Padding="50">
			<Grid RowDefinitions="*,Auto">
				<StackPanel Grid.Row="0" Orientation="Vertical" Spacing="40">
					<Image
						Width="150"
						Source="avares://OfficeTracker/Assets/Images/logo_white.png"
						Opacity="1"
					/>
					<StackPanel Orientation="Vertical">
						<Label
							Content="Setup-Assistenten"
							HorizontalAlignment="Center"
							FontFamily="{DynamicResource UrbanistFont}"
							FontSize="14"
							Margin="0 -6"
							FontWeight="Medium"
						/>
						<Label
							Content="Schritt 4"
							HorizontalAlignment="Center"
							FontFamily="{DynamicResource UrbanistFont}"
							FontSize="18"
							FontWeight="Medium"
						/>
					</StackPanel>
					<StackPanel Orientation="Vertical" Spacing="10">
						<TextBlock
							HorizontalAlignment="Left"
							TextWrapping="Wrap"
							FontFamily="{DynamicResource UrbanistFont}"
							Text="Gebe bitte an wie viele Tage du bereits im HomeOffice und am Standort warst:"
						/>
						<StackPanel Orientation="Vertical">
							<Label Content="HomeOffice - Tage:" />
							<NumericUpDown
								HorizontalAlignment="Stretch"
								TextAlignment="Left"
								FontFamily="{DynamicResource UrbanistFont}"
								Watermark="0"
								ShowButtonSpinner="False"
								AllowSpin="True"
								Value="{Binding HomeOfficeDays}"
							/>
						</StackPanel>
						<StackPanel Orientation="Vertical">
							<Label Content="Standort - Tage:" />
							<NumericUpDown
								HorizontalAlignment="Stretch"
								TextAlignment="Left"
								FontFamily="{DynamicResource UrbanistFont}"
								Watermark="0"
								ShowButtonSpinner="False"
								AllowSpin="True"
								Value="{Binding OfficeDays}"
							/>
						</StackPanel>
						<CheckBox
							Content="Heutiger Tag ist mit einberechnet!"
							FontFamily="{DynamicResource UrbanistFont}"
							IsChecked="{Binding CurrentDayTracked}"
						/>
					</StackPanel>
				</StackPanel>
				<Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto">
					<Button Grid.Column="0" Content="Zurück" Command="{Binding PreviousSetupPageCommand}" />
					<Button Grid.Column="2" Content="Weiter" Command="{Binding NextSetupPageCommand}" />
				</Grid>
			</Grid>
		</Border>
	</Panel>
</UserControl>

