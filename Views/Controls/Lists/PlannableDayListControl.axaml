<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="using:OfficeTracker.Converters"
        xmlns:models="using:OfficeTracker.Database.Models"
        xmlns:controls="using:OfficeTracker.Views.Controls.Lists">
	<Design.PreviewWith>
		<controls:PlannableDayListControl />
	</Design.PreviewWith>

	<Style Selector="controls|PlannableDayListControl">
		<Style.Resources>
			<converters:PlannableDayTypeConverter x:Key="TypeConverter"/>
		</Style.Resources>

		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<Grid
					RowDefinitions="*,Auto"
					ColumnDefinitions="*"
					Margin="10"
					RowSpacing="5"
				>
					<ListBox
						Grid.Row="0"
						Grid.Column="0"
						SelectionMode="Single"
						ItemsSource="{TemplateBinding Items}"
						x:Name="List"
					>
						<ListBox.ItemTemplate>
							<DataTemplate DataType="models:DbPlannableDay">
								<Grid
									ColumnDefinitions="Auto,*,2*,Auto"
									ColumnSpacing="10"
								>
									<Border
										Grid.Column="0"
										Width="16"
										Height="16"
										CornerRadius="4"
										VerticalAlignment="Center"
										BorderThickness="1"
										BorderBrush="{Binding TypeColors.Border}"
										Background="{Binding TypeColors.Background}"
									/>
									<TextBlock
										Grid.Column="1"
										Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}"
										VerticalAlignment="Center"
										FontFamily="{DynamicResource UrbanistFont}"
									/>
									<TextBlock
										Grid.Column="2"
										Text="{Binding Type, Converter={StaticResource TypeConverter}}"
										VerticalAlignment="Center"
										FontFamily="{DynamicResource UrbanistFont}"
									/>
								</Grid>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
					<Grid
						Grid.Row="1"
						Grid.Column="0"
						ColumnDefinitions="*,Auto"
						RowDefinitions="*"
						ColumnSpacing="10"
					>
						<Button
							Grid.Column="0"
							x:Name="AddButton"
							HorizontalAlignment="Stretch"
							FontSize="12"
							IsEnabled="{TemplateBinding IsAddEnabled}"
							FontFamily="{DynamicResource UrbanistFont}"
							Content="Neuen Tag planen"
						/>
						<Button
							Grid.Column="1"
							x:Name="DeleteButton"
							HorizontalAlignment="Stretch"
							FontSize="12"
							FontFamily="{DynamicResource UrbanistFont}"
							Content="Löschen"
						/>
					</Grid>
				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>

