<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialicons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:controls="using:OfficeTracker.Views.Controls"
    x:DataType="vm:StatsControl"
    xmlns:vm="using:OfficeTracker.Views.Controls"
    >
    <Design.PreviewWith>
        <controls:StatsControl />
    </Design.PreviewWith>

    <Style Selector="controls|StatsControl">
        <Setter Property="Template">
            <ControlTemplate>
	            <Grid
		            ColumnDefinitions="Auto,*"
		            HorizontalAlignment="Stretch"
		            VerticalAlignment="Center"
		            ColumnSpacing="5"
		        >
		            <Border
			            Grid.Column="0"
			            x:Name="Error"
			            CornerRadius="4"
			            Padding="4"
			            BorderBrush="#640000"
			            Background="#40640000"
			            BorderThickness="1"
			            HorizontalAlignment="Center"
			            VerticalAlignment="Center"
			            ToolTip.Tip="Unzureichende Quote"
			            ToolTip.Placement="Top"
			            ToolTip.VerticalOffset="0"
		            >
			            <materialicons:MaterialIcon Kind="Alert" Foreground="#ff7373" />
		            </Border>
		            <Border
			            Grid.Column="0"
			            x:Name="Warning"
			            CornerRadius="4"
			            Padding="4"
			            BorderBrush="#642b00"
			            Background="#40642b00"
			            BorderThickness="1"
			            HorizontalAlignment="Center"
			            VerticalAlignment="Center"
			            ToolTip.Tip="Ausgeglichene Quote"
			            ToolTip.Placement="Top"
			            ToolTip.VerticalOffset="0"
		            >
			            <materialicons:MaterialIcon Kind="Equal" Foreground="#ffb073" />
		            </Border>
		            <Grid
			            Grid.Column="1"
			            x:Name="StatsGrid"
			            ColumnDefinitions="*,*"
			            HorizontalAlignment="Stretch"
			            VerticalAlignment="Stretch"
		            >
			            <StackPanel
				            Grid.Column="0"
				            x:Name="HomeStackPanel"
				            ToolTip.Placement="Top"
				            ToolTip.VerticalOffset="0"
			            >
				            <Border
					            CornerRadius="2 0 0 2"
					            Padding="4"
					            Background="#30003764"
					            HorizontalAlignment="Stretch"
					            VerticalAlignment="Stretch"
					            BorderThickness="1 1 0 1"
					            BorderBrush="#003764"
				            >
					            <TextBlock
						            x:Name="HomeOfficePercentage"
						            FontSize="12"
						            HorizontalAlignment="Center"
						            VerticalAlignment="Center"
						            FontFamily="{DynamicResource UrbanistFont}"
						            FontWeight="Regular"
						            LineHeight="16"
					            />
				            </Border>
			            </StackPanel>
			            <StackPanel
				            x:Name="OfficeStackPanel"
				            Grid.Column="1"
				            ToolTip.Placement="Top"
				            ToolTip.VerticalOffset="0"
			            >
				            <Border
					            CornerRadius="0 2 2 0"
					            Padding="4"
					            Background="#30357a32"
					            HorizontalAlignment="Stretch"
					            VerticalAlignment="Stretch"
					            BorderThickness="0 1 1 1"
					            BorderBrush="#357a32"
				            >
					            <TextBlock
						            x:Name="OfficePercentage"
						            FontSize="12"
						            HorizontalAlignment="Center"
						            VerticalAlignment="Center"
						            FontFamily="{DynamicResource UrbanistFont}"
						            FontWeight="Regular"
						            LineHeight="16"
					            />
				            </Border>
			            </StackPanel>
		            </Grid>
	            </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
