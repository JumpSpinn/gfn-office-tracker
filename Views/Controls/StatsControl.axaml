<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:OfficeTracker.Views.Controls"
    x:DataType="vm:StatsControl"
    xmlns:vm="using:OfficeTracker.Views.Controls"
    >
    <Design.PreviewWith>
        <controls:StatsControl />
    </Design.PreviewWith>

    <Style Selector="controls|StatsControl">
        <Setter Property="Template">
            <ControlTemplate>
	            <StackPanel Spacing="5">
		            <Border CornerRadius="4" Padding="2" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Center">
			            <Grid x:Name="StatsGrid" RowDefinitions="*" ColumnDefinitions="*,*">
				            <StackPanel x:Name="HomeStackPanel" Grid.Column="0" ToolTip.Placement="Top" ToolTip.VerticalOffset="0">
					            <Border CornerRadius="2 0 0 2" Padding="4 2" Background="#30003764" HorizontalAlignment="Stretch" BorderThickness="1 1 0 1" BorderBrush="#003764">
						            <TextBlock x:Name="HomeOfficePercentage" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{DynamicResource UrbanistFont}" FontWeight="Regular" LineHeight="16" />
					            </Border>
				            </StackPanel>
				            <StackPanel x:Name="OfficeStackPanel" Grid.Column="1" ToolTip.Placement="Top" ToolTip.VerticalOffset="0">
					            <Border CornerRadius="0 2 2 0" Padding="4 2" Background="#30357a32" HorizontalAlignment="Stretch" BorderThickness="0 1 1 1" BorderBrush="#357a32">
						            <TextBlock x:Name="OfficePercentage" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{DynamicResource UrbanistFont}" FontWeight="Regular" LineHeight="16" />
					            </Border>
				            </StackPanel>
			            </Grid>
		            </Border>
		            <Border
			            x:Name="Error"
			            CornerRadius="4"
			            Padding="3 0"
			            BorderBrush="#640000"
			            Background="#40640000"
			            BorderThickness="1"
			            HorizontalAlignment="Center">
			            <TextBlock
				            Text="Quote schaut nicht gut aus"
				            FontSize="10"
				            Foreground="#ff7373"
				            Padding="4"
				            FontFamily="{DynamicResource UrbanistFont}"
				            FontWeight="Regular"
				            LetterSpacing=".25"
				            HorizontalAlignment="Center"
			            />
		            </Border>
		            <Border
			            x:Name="Warning"
			            IsVisible="False"
			            CornerRadius="4"
			            Padding="3 0"
			            BorderBrush="#642b00"
			            Background="#40642b00"
			            BorderThickness="1"
			            HorizontalAlignment="Center">
			            <TextBlock
				            Text="Quote ist ausgeglichen!"
				            FontSize="10"
				            Foreground="#ffb073"
				            Padding="4"
				            FontFamily="{DynamicResource UrbanistFont}"
				            FontWeight="Regular"
				            LetterSpacing=".25"
				            HorizontalAlignment="Center"
			            />
		            </Border>
	            </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
