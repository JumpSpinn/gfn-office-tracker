<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="650"
             x:Class="OfficeTracker.Views.Forms.CurrentDayForm">
    <Grid ColumnDefinitions="*,*" RowDefinitions="*" HorizontalAlignment="Stretch" ColumnSpacing="5">
	    <RadioButton
		    x:Name="HomeOfficeRadio"
		    Grid.Column="0"
		    Content="HomeOffice"
		    GroupName="DaySelection"
	    />
	    <RadioButton
		    x:Name="OfficeRadio"
		    Grid.Column="1"
		    Content="Standort"
		    GroupName="DaySelection"
		    IsChecked="True"
	    />
    </Grid>
</UserControl>
